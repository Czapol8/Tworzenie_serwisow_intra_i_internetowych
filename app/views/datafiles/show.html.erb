<script>
    $(document).on('turbolinks:load', function() {
        $.ajax({
            type: "GET",
            contentType: "application/json; charset=utf-8",
            url: "<%= get_data_path %>",
            dataType: 'json',
            success: function (data) {
                console.log(data);
                d3.csv(data.url, function(data) {
                    console.log(data);
                });
                //draw(data);
            },
            error: function (result) {
                error();
            }
        });
    });
    function draw(data) {
        var color = d3.schemeCategory20b;
        var width = 420,
            barHeight = 20;

        var x = d3.scaleLinear()
            .range([0, width])
            .domain([0, d3.max(data)]);

        var chart = d3.select("#graph")
            .attr("width", width)
            .attr("height", barHeight * data.length);

        var bar = chart.selectAll("g")
            .data(data)
            .enter().append("g")
            .attr("transform", function (d, i) {
                return "translate(0," + i * barHeight + ")";
            });

        bar.append("rect")
            .attr("width", x)
            .attr("height", barHeight - 1)
            .style("fill", function () {
                return color
            })

        bar.append("text")
            .attr("x", function (d) {
                return x(d) - 10;
            })
            .attr("y", barHeight / 2)
            .attr("dy", ".35em")
            .style("fill", "white")
            .text(function (d) {
                return d;
            });
    }

    function error() {
        console.log("error")
    }

</script>